<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CardScan Admin - CSV Sanitizer</title>

    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      rel="stylesheet"
    />

    <style>
      :root {
        --primary: #6262a6;
        --primary-dark: #4e4e85;
        --primary-light: #eef0f7;
        --text-dark: #1e293b;
        --text-gray: #64748b;
        --bg-body: #f1f5f9;
        --white: #ffffff;
        --shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
        --sidebar-width: 260px;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Inter", sans-serif;
      }

      body {
        background-color: var(--bg-body);
        display: flex;
        min-height: 100vh;
      }

      /* --- SIDEBAR --- */
      .sidebar {
        width: var(--sidebar-width);
        background-color: var(--primary);
        color: var(--white);
        display: flex;
        flex-direction: column;
        position: fixed;
        height: 100vh;
        left: 0;
        top: 0;
        padding: 24px;
        z-index: 50;
      }

      .logo {
        font-size: 22px;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 40px;
        letter-spacing: -0.5px;
      }

      .menu-label {
        font-size: 12px;
        text-transform: uppercase;
        color: rgba(255, 255, 255, 0.6);
        margin-bottom: 10px;
        font-weight: 600;
        letter-spacing: 0.5px;
      }

      .menu {
        list-style: none;
        display: flex;
        flex-direction: column;
        gap: 8px;
      }

      .menu li a {
        text-decoration: none;
        color: rgba(255, 255, 255, 0.8);
        padding: 12px 16px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        gap: 12px;
        font-size: 14px;
        font-weight: 500;
        transition: all 0.2s;
      }

      .menu li a:hover,
      .menu li a.active {
        background-color: rgba(255, 255, 255, 0.15);
        color: var(--white);
      }

      .menu li a i {
        width: 20px;
        text-align: center;
      }

      /* --- MAIN CONTENT --- */
      .main-wrapper {
        margin-left: var(--sidebar-width);
        flex: 1;
        display: flex;
        flex-direction: column;
      }

      /* --- HEADER --- */
      header {
        background-color: var(--white);
        height: 70px;
        padding: 0 32px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        box-shadow: var(--shadow);
        position: sticky;
        top: 0;
        z-index: 40;
      }

      .search-bar {
        display: flex;
        align-items: center;
        background-color: var(--bg-body);
        padding: 10px 16px;
        border-radius: 8px;
        width: 350px;
        border: 1px solid transparent;
        transition: 0.2s;
      }

      .search-bar:focus-within {
        border-color: var(--primary);
        background-color: var(--white);
      }

      .search-bar i {
        color: var(--text-gray);
        margin-right: 10px;
      }

      .search-bar input {
        border: none;
        background: none;
        outline: none;
        width: 100%;
        font-size: 14px;
        color: var(--text-dark);
      }

      .header-actions {
        display: flex;
        align-items: center;
        gap: 20px;
      }

      .icon-wrapper {
        position: relative;
        cursor: pointer;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        transition: 0.2s;
      }

      .icon-wrapper:hover {
        background-color: var(--bg-body);
        color: var(--primary);
      }

      /* --- PAGE CONTENT --- */
      .content {
        padding: 32px;
      }

      .page-title {
        font-size: 24px;
        font-weight: 700;
        color: var(--text-dark);
        margin-bottom: 24px;
      }

      .panel {
        background: var(--white);
        border-radius: 12px;
        box-shadow: var(--shadow);
        padding: 24px;
        display: flex;
        flex-direction: column;
        margin-bottom: 24px;
      }

      .panel-title {
        font-size: 18px;
        font-weight: 600;
        color: var(--text-dark);
        margin-bottom: 8px;
      }

      .panel-subtitle {
        font-size: 14px;
        color: var(--text-gray);
        margin-bottom: 24px;
      }

      /* --- CSV UPLOADER STYLES --- */
      .upload-zone {
        border: 2px dashed #cbd5e1;
        border-radius: 8px;
        padding: 40px 20px;
        text-align: center;
        background-color: #f8fafc;
        transition: all 0.2s ease;
        cursor: pointer;
      }

      .upload-zone:hover, .upload-zone.dragover {
        border-color: var(--primary);
        background-color: var(--primary-light);
      }

      .upload-icon {
        font-size: 32px;
        color: var(--primary);
        margin-bottom: 16px;
      }

      .upload-text {
        font-size: 16px;
        color: var(--text-dark);
        font-weight: 500;
        margin-bottom: 8px;
      }

      .upload-subtext {
        font-size: 13px;
        color: var(--text-gray);
      }

      #csvFileInput {
        display: none;
      }

      /* --- BUTTONS --- */
      .btn {
        padding: 10px 20px;
        border-radius: 6px;
        font-size: 14px;
        font-weight: 500;
        cursor: pointer;
        border: none;
        transition: 0.2s;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        justify-content: center;
        text-decoration: none;
      }

      .btn-primary {
        background-color: var(--primary);
        color: var(--white);
      }

      .btn-primary:hover {
        background-color: var(--primary-dark);
      }

      .btn-outline {
        background-color: transparent;
        border: 1px solid #cbd5e1;
        color: var(--text-dark);
      }

      .btn-outline:hover {
        background-color: #f1f5f9;
      }

      .actions-row {
        display: flex;
        gap: 12px;
        margin-top: 20px;
      }

      /* --- LOADING STATE --- */
      .loading-container {
        display: none; /* Hidden by default */
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 40px 0;
      }

      .spinner {
        width: 40px;
        height: 40px;
        border: 4px solid var(--primary-light);
        border-top: 4px solid var(--primary);
        border-radius: 50%;
        animation: spin 1s linear infinite;
        margin-bottom: 16px;
      }

      @keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
      }

      /* --- PREVIEW TABLE (Small Window) --- */
      .preview-container {
        display: none; /* Hidden until file is processed */
      }

      .table-wrapper {
        max-height: 350px;
        overflow-y: auto;
        overflow-x: auto;
        border: 1px solid #e2e8f0;
        border-radius: 8px;
        margin-bottom: 20px;
      }

      .preview-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 13px;
      }

      .preview-table th,
      .preview-table td {
        padding: 12px 16px;
        text-align: left;
        border-bottom: 1px solid #e2e8f0;
        white-space: nowrap;
      }

      .preview-table th {
        background-color: #f8fafc;
        font-weight: 600;
        color: var(--text-gray);
        position: sticky;
        top: 0;
        z-index: 10;
        box-shadow: 0 1px 0 #e2e8f0;
      }

      .preview-table tr:hover {
        background-color: #f8fafc;
      }

      /* Responsive */
      @media (max-width: 768px) {
        .sidebar { display: none; }
        .main-wrapper { margin-left: 0; }
        header { padding: 0 16px; }
        .search-bar { width: 200px; }
      }
    </style>
  </head>
  <body>
    <%- include("partials/sidebar", { activePage: "csv-sanitizer" }) %>
  
    <div class="main-wrapper">
      <header>
        <div class="search-bar">
          <i class="fas fa-search"></i>
          <input type="text" placeholder="Search card ID or user..." />
        </div>

        <div class="header-actions">
          <div class="icon-wrapper">
            <i class="fas fa-cog" style="font-size: 18px; color: #64748b"></i>
          </div>
          <div style="width: 35px; height: 35px; background: #6262a6; border-radius: 50%; color: white; display: flex; align-items: center; justify-content: center; font-weight: bold; cursor: pointer;">
            AD
          </div>
        </div>
      </header>

      <div class="content">
        <h1 class="page-title">CSV Sanitizer</h1>

        <div class="panel">
          <div class="panel-title">Upload Data</div>
          <div class="panel-subtitle">Upload your raw CSV file to sanitize and prepare it for import.</div>
          
          <div class="upload-zone" id="uploadZone">
            <i class="fas fa-cloud-upload-alt upload-icon"></i>
            <div class="upload-text">Click or drag CSV file to upload</div>
            <div class="upload-subtext">Supports .csv files only</div>
            <input type="file" id="csvFileInput" accept=".csv, text/csv" />
          </div>
          
          <div class="actions-row" id="processActions" style="display: none;">
            <div style="display: flex; align-items: center; flex: 1; font-size: 14px; font-weight: 500;">
              <i class="fas fa-file-csv" style="color: var(--primary); margin-right: 8px; font-size: 18px;"></i>
              <span id="fileNameDisplay">filename.csv</span>
            </div>
            <button class="btn btn-outline" id="resetBtn">Cancel</button>
            <button class="btn btn-primary" id="sanitizeBtn">
              <i class="fas fa-cloud-upload-alt"></i> Send to Sanitize
            </button>
          </div>

          <div class="loading-container" id="loadingState">
            <div class="spinner"></div>
            <div style="color: var(--text-gray); font-weight: 500;">Uploading and sanitizing data...</div>
          </div>
        </div>

        <div class="panel preview-container" id="previewPanel">
          <div class="panel-title">Data Preview</div>
          <div class="panel-subtitle" id="previewSubtitle">Showing preview of sanitized data from the server.</div>
          
          <div class="table-wrapper">
            <table class="preview-table" id="previewTable">
              <thead id="previewThead">
                </thead>
              <tbody id="previewTbody">
                </tbody>
            </table>
          </div>

          <div class="actions-row">
            <a href="#" class="btn btn-primary" id="downloadBtn" download>
              <i class="fas fa-download"></i> Download Sanitized CSV
            </a>
          </div>
        </div>

      </div>
    </div>

    <script>
      // --- CSV UPLOAD & FETCH LOGIC ---
      const uploadZone = document.getElementById('uploadZone');
      const fileInput = document.getElementById('csvFileInput');
      const processActions = document.getElementById('processActions');
      const fileNameDisplay = document.getElementById('fileNameDisplay');
      const resetBtn = document.getElementById('resetBtn');
      const sanitizeBtn = document.getElementById('sanitizeBtn');
      const loadingState = document.getElementById('loadingState');
      
      const previewPanel = document.getElementById('previewPanel');
      const previewThead = document.getElementById('previewThead');
      const previewTbody = document.getElementById('previewTbody');
      const previewSubtitle = document.getElementById('previewSubtitle');
      const downloadBtn = document.getElementById('downloadBtn');

      let rawFile = null;

      // Handle Drag and Drop
      uploadZone.addEventListener('click', () => fileInput.click());
      
      uploadZone.addEventListener('dragover', (e) => {
        e.preventDefault();
        uploadZone.classList.add('dragover');
      });
      
      uploadZone.addEventListener('dragleave', () => {
        uploadZone.classList.remove('dragover');
      });
      
      uploadZone.addEventListener('drop', (e) => {
        e.preventDefault();
        uploadZone.classList.remove('dragover');
        if (e.dataTransfer.files.length) {
          fileInput.files = e.dataTransfer.files;
          handleFileSelect();
        }
      });

      fileInput.addEventListener('change', handleFileSelect);

      function handleFileSelect() {
        if (fileInput.files.length > 0) {
          rawFile = fileInput.files[0];
          
          // Strict frontend validation for CSV
          if (!rawFile.name.toLowerCase().endsWith('.csv') && rawFile.type !== 'text/csv') {
            alert('Invalid file format. Please select a valid .csv file.');
            resetUI();
            return;
          }

          fileNameDisplay.textContent = rawFile.name;
          uploadZone.style.display = 'none';
          processActions.style.display = 'flex';
          previewPanel.style.display = 'none';
        }
      }

      resetBtn.addEventListener('click', resetUI);

      function resetUI() {
        fileInput.value = '';
        rawFile = null;
        uploadZone.style.display = 'block';
        processActions.style.display = 'none';
        previewPanel.style.display = 'none';
        loadingState.style.display = 'none';
      }

      // Send file to Backend
      sanitizeBtn.addEventListener('click', async () => {
        if (!rawFile) return;

        // Hide actions, show loader
        processActions.style.display = 'none';
        loadingState.style.display = 'flex';

        const formData = new FormData();
        formData.append('file', rawFile); // Ensure your backend expects 'file'

        try {
          const response = await fetch('/dashboard', {
            method: 'POST',
            body: formData,
          });

          if (!response.ok) {
            throw new Error(`Server responded with status ${response.status}`);
          }

          /* EXPECTED JSON RESPONSE FROM BACKEND:
             {
               "csvText": "header1,header2\nvalue1,value2",
               "downloadUrl": "/downloads/sanitized_file.csv"
             }
          */
          const data = await response.json();

          // Hide loading, process preview
          loadingState.style.display = 'none';
          
          // Ensure we actually got the text back
          if(data.csvText) {
            renderPreviewTable(data.csvText);
            
            // Set the download link
            downloadBtn.href = data.downloadUrl || '#'; 
            previewPanel.style.display = 'flex';
          } else {
             alert('Backend did not return valid CSV text for preview.');
             resetUI();
          }

        } catch (error) {
          console.error('Upload Error:', error);
          alert('There was an error sending the file to the server. Please check the console.');
          resetUI();
        }
      });

      function renderPreviewTable(csvText) {
        // Split text by line, ignoring empty lines
        const lines = csvText.split(/\r?\n/).filter(line => line.trim() !== '');
        
        if (lines.length === 0) {
          previewThead.innerHTML = '';
          previewTbody.innerHTML = '<tr><td>No data returned</td></tr>';
          return;
        }

        previewThead.innerHTML = '';
        previewTbody.innerHTML = '';

        // Safely split CSV considering basic commas (Note: does not handle complex quoted commas natively in this basic split)
        const parseLine = (line) => line.split(',').map(cell => cell.trim());

        // Setup Headers
        const headers = parseLine(lines[0]);
        const headerRow = document.createElement('tr');
        headers.forEach(headerText => {
          const th = document.createElement('th');
          th.textContent = headerText;
          headerRow.appendChild(th);
        });
        previewThead.appendChild(headerRow);

        // Setup Body (Limit to 50 for preview performance)
        const previewLimit = Math.min(lines.length, 51); 

        for (let i = 1; i < previewLimit; i++) {
          const rowData = parseLine(lines[i]);
          const tr = document.createElement('tr');
          
          rowData.forEach(cellText => {
            const td = document.createElement('td');
            td.textContent = cellText;
            tr.appendChild(td);
          });
          
          previewTbody.appendChild(tr);
        }

        previewSubtitle.textContent = `Showing preview of ${previewLimit - 1} rows. Download to view the full file.`;
      }
    </script>
  </body>
</html>