<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CardScan Admin - CSV Sanitizer</title>

    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      rel="stylesheet"
    />

    <style>
      :root {
        --primary: #6262a6;
        --primary-dark: #4e4e85;
        --primary-light: #eef0f7;
        --text-dark: #1e293b;
        --text-gray: #64748b;
        --bg-body: #f1f5f9;
        --white: #ffffff;
        --shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
        --sidebar-width: 260px;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Inter", sans-serif;
      }

      body {
        background-color: var(--bg-body);
        display: flex;
        min-height: 100vh;
      }

      /* --- SIDEBAR --- */
      .sidebar {
        width: var(--sidebar-width);
        background-color: var(--primary);
        color: var(--white);
        display: flex;
        flex-direction: column;
        position: fixed;
        height: 100vh;
        left: 0;
        top: 0;
        padding: 24px;
        z-index: 50;
      }

      .logo {
        font-size: 22px;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 40px;
        letter-spacing: -0.5px;
      }

      .menu-label {
        font-size: 12px;
        text-transform: uppercase;
        color: rgba(255, 255, 255, 0.6);
        margin-bottom: 10px;
        font-weight: 600;
        letter-spacing: 0.5px;
      }

      .menu {
        list-style: none;
        display: flex;
        flex-direction: column;
        gap: 8px;
      }

      .menu li a {
        text-decoration: none;
        color: rgba(255, 255, 255, 0.8);
        padding: 12px 16px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        gap: 12px;
        font-size: 14px;
        font-weight: 500;
        transition: all 0.2s;
      }

      .menu li a:hover,
      .menu li a.active {
        background-color: rgba(255, 255, 255, 0.15);
        color: var(--white);
      }

      .menu li a i {
        width: 20px;
        text-align: center;
      }

      /* --- MAIN CONTENT --- */
      .main-wrapper {
        margin-left: var(--sidebar-width);
        flex: 1;
        display: flex;
        flex-direction: column;
      }

      /* --- HEADER --- */
      header {
        background-color: var(--white);
        height: 70px;
        padding: 0 32px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        box-shadow: var(--shadow);
        position: sticky;
        top: 0;
        z-index: 40;
      }

      .search-bar {
        display: flex;
        align-items: center;
        background-color: var(--bg-body);
        padding: 10px 16px;
        border-radius: 8px;
        width: 350px;
        border: 1px solid transparent;
        transition: 0.2s;
      }

      .search-bar:focus-within {
        border-color: var(--primary);
        background-color: var(--white);
      }

      .search-bar i {
        color: var(--text-gray);
        margin-right: 10px;
      }

      .search-bar input {
        border: none;
        background: none;
        outline: none;
        width: 100%;
        font-size: 14px;
        color: var(--text-dark);
      }

      .header-actions {
        display: flex;
        align-items: center;
        gap: 20px;
      }

      .icon-wrapper {
        position: relative;
        cursor: pointer;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        transition: 0.2s;
      }

      .icon-wrapper:hover {
        background-color: var(--bg-body);
        color: var(--primary);
      }

      .badge {
        position: absolute;
        top: -2px;
        right: -2px;
        min-width: 18px;
        height: 18px;
        padding: 0 4px;
        background-color: #ef4444;
        border-radius: 10px;
        border: 2px solid var(--white);
        color: white;
        font-size: 10px;
        font-weight: 700;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .notification-dropdown {
        display: none;
        position: absolute;
        top: 55px;
        right: -10px;
        width: 300px;
        background: var(--white);
        border-radius: 12px;
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1),
          0 4px 6px -2px rgba(0, 0, 0, 0.05);
        border: 1px solid #e2e8f0;
        z-index: 100;
        overflow: hidden;
        cursor: default;
      }

      .notification-dropdown.active {
        display: block;
        animation: fadeIn 0.2s ease-out;
      }

      @keyframes fadeIn {
        from { opacity: 0; transform: translateY(-10px); }
        to { opacity: 1; transform: translateY(0); }
      }

      .notif-header {
        padding: 16px;
        font-weight: 600;
        font-size: 14px;
        color: var(--text-dark);
        border-bottom: 1px solid #f1f5f9;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .notif-list {
        max-height: 300px;
        overflow-y: auto;
      }

      .notif-item {
        padding: 12px 16px;
        display: flex;
        gap: 12px;
        border-bottom: 1px solid #f1f5f9;
        transition: background 0.2s;
        cursor: pointer;
      }

      .notif-item:hover {
        background-color: #f8fafc;
      }

      /* --- PAGE CONTENT --- */
      .content {
        padding: 32px;
      }

      .page-title {
        font-size: 24px;
        font-weight: 700;
        color: var(--text-dark);
        margin-bottom: 24px;
      }

      .panel {
        background: var(--white);
        border-radius: 12px;
        box-shadow: var(--shadow);
        padding: 24px;
        display: flex;
        flex-direction: column;
        margin-bottom: 24px;
      }

      .panel-title {
        font-size: 18px;
        font-weight: 600;
        color: var(--text-dark);
        margin-bottom: 8px;
      }

      .panel-subtitle {
        font-size: 14px;
        color: var(--text-gray);
        margin-bottom: 24px;
      }

      /* --- CSV UPLOADER STYLES --- */
      .upload-zone {
        border: 2px dashed #cbd5e1;
        border-radius: 8px;
        padding: 40px 20px;
        text-align: center;
        background-color: #f8fafc;
        transition: all 0.2s ease;
        cursor: pointer;
      }

      .upload-zone:hover, .upload-zone.dragover {
        border-color: var(--primary);
        background-color: var(--primary-light);
      }

      .upload-icon {
        font-size: 32px;
        color: var(--primary);
        margin-bottom: 16px;
      }

      .upload-text {
        font-size: 16px;
        color: var(--text-dark);
        font-weight: 500;
        margin-bottom: 8px;
      }

      .upload-subtext {
        font-size: 13px;
        color: var(--text-gray);
      }

      #csvFileInput {
        display: none;
      }

      /* --- BUTTONS --- */
      .btn {
        padding: 10px 20px;
        border-radius: 6px;
        font-size: 14px;
        font-weight: 500;
        cursor: pointer;
        border: none;
        transition: 0.2s;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        justify-content: center;
      }

      .btn-primary {
        background-color: var(--primary);
        color: var(--white);
      }

      .btn-primary:hover {
        background-color: var(--primary-dark);
      }

      .btn-outline {
        background-color: transparent;
        border: 1px solid #cbd5e1;
        color: var(--text-dark);
      }

      .btn-outline:hover {
        background-color: #f1f5f9;
      }

      .actions-row {
        display: flex;
        gap: 12px;
        margin-top: 20px;
      }

      /* --- PREVIEW TABLE (Small Window) --- */
      .preview-container {
        display: none; /* Hidden until file is processed */
      }

      .table-wrapper {
        max-height: 350px; /* The "Small Window" constraint */
        overflow-y: auto;
        overflow-x: auto;
        border: 1px solid #e2e8f0;
        border-radius: 8px;
        margin-bottom: 20px;
      }

      .preview-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 13px;
      }

      .preview-table th,
      .preview-table td {
        padding: 12px 16px;
        text-align: left;
        border-bottom: 1px solid #e2e8f0;
        white-space: nowrap;
      }

      .preview-table th {
        background-color: #f8fafc;
        font-weight: 600;
        color: var(--text-gray);
        position: sticky;
        top: 0;
        z-index: 10;
        box-shadow: 0 1px 0 #e2e8f0;
      }

      .preview-table tr:hover {
        background-color: #f8fafc;
      }

      /* Responsive */
      @media (max-width: 768px) {
        .sidebar { display: none; }
        .main-wrapper { margin-left: 0; }
        header { padding: 0 16px; }
        .search-bar { width: 200px; }
      }
    </style>
  </head>
  <body>
    <%- include("partials/sidebar", { activePage: "csv-sanitizer" }) %>
  
    <div class="main-wrapper">
      <header>
        <div class="search-bar">
          <i class="fas fa-search"></i>
          <input type="text" placeholder="Search card ID or user..." />
        </div>

        <div class="header-actions">
          <div class="icon-wrapper" id="notificationBtn">
            <i class="far fa-bell" style="font-size: 18px; color: #64748b"></i>
            
            <%
              function startOfDay(d) { return new Date(d.getFullYear(), d.getMonth(), d.getDate()); }
              function sameDay(a, b) { return startOfDay(a).getTime() === startOfDay(b).getTime(); }
              /* ... (rest of the date parsing logic omitted for brevity but assumed present in your environment) ... */
              var showCount = 0; // Fallback for pure HTML viewing
            %>
            
            <% if (showCount > 0) { %>
              <span class="badge" id="notifBadge"><%= showCount %></span>
            <% } %>
          
            <div class="notification-dropdown" id="notificationDropdown">
              <div class="notif-header">
                <span>Notifications</span>
              </div>
              <div class="notif-list">
                <div style="padding:14px 16px; color:#94a3b8; font-size:13px;">
                  No notifications for today.
                </div>
              </div>
            </div>
          </div>

          <div class="icon-wrapper">
            <i class="fas fa-cog" style="font-size: 18px; color: #64748b"></i>
          </div>
          <div style="width: 35px; height: 35px; background: #6262a6; border-radius: 50%; color: white; display: flex; align-items: center; justify-content: center; font-weight: bold; cursor: pointer;">
            AD
          </div>
        </div>
      </header>

      <div class="content">
        <h1 class="page-title">CSV Sanitizer</h1>

        <div class="panel">
          <div class="panel-title">Upload Data</div>
          <div class="panel-subtitle">Upload your raw CSV file to clean formatting, remove empty rows, and prepare it for import.</div>
          
          <div class="upload-zone" id="uploadZone">
            <i class="fas fa-cloud-upload-alt upload-icon"></i>
            <div class="upload-text">Click or drag CSV file to upload</div>
            <div class="upload-subtext">Supports .csv files only</div>
            <input type="file" id="csvFileInput" accept=".csv" />
          </div>
          
          <div class="actions-row" id="processActions" style="display: none;">
            <div style="display: flex; align-items: center; flex: 1; font-size: 14px; font-weight: 500;">
              <i class="fas fa-file-csv" style="color: var(--primary); margin-right: 8px; font-size: 18px;"></i>
              <span id="fileNameDisplay">filename.csv</span>
            </div>
            <button class="btn btn-outline" id="resetBtn">Cancel</button>
            <button class="btn btn-primary" id="sanitizeBtn">
              <i class="fas fa-broom"></i> Sanitize Data
            </button>
          </div>
        </div>

        <div class="panel preview-container" id="previewPanel">
          <div class="panel-title">Data Preview</div>
          <div class="panel-subtitle" id="previewSubtitle">Showing preview of sanitized data.</div>
          
          <div class="table-wrapper">
            <table class="preview-table" id="previewTable">
              <thead id="previewThead">
                </thead>
              <tbody id="previewTbody">
                </tbody>
            </table>
          </div>

          <div class="actions-row">
            <button class="btn btn-primary" id="downloadBtn">
              <i class="fas fa-download"></i> Download Sanitized CSV
            </button>
          </div>
        </div>

      </div>
    </div>

    <script>
      // Notification Dropdown Logic
      const notifBtn = document.getElementById("notificationBtn");
      const notifDropdown = document.getElementById("notificationDropdown");

      if (notifBtn && notifDropdown) {
        notifBtn.addEventListener("click", function (e) {
          if (e && e.stopPropagation) e.stopPropagation();
          notifDropdown.classList.toggle("active");
        });

        document.addEventListener("click", function (e) {
          if (!notifDropdown.contains(e.target) && !notifBtn.contains(e.target)) {
            notifDropdown.classList.remove("active");
          }
        });
      }

      // --- CSV SANITIZER LOGIC ---
      const uploadZone = document.getElementById('uploadZone');
      const fileInput = document.getElementById('csvFileInput');
      const processActions = document.getElementById('processActions');
      const fileNameDisplay = document.getElementById('fileNameDisplay');
      const resetBtn = document.getElementById('resetBtn');
      const sanitizeBtn = document.getElementById('sanitizeBtn');
      
      const previewPanel = document.getElementById('previewPanel');
      const previewThead = document.getElementById('previewThead');
      const previewTbody = document.getElementById('previewTbody');
      const previewSubtitle = document.getElementById('previewSubtitle');
      const downloadBtn = document.getElementById('downloadBtn');

      let rawFile = null;
      let sanitizedDataArray = [];

      // Handle Drag and Drop
      uploadZone.addEventListener('click', () => fileInput.click());
      
      uploadZone.addEventListener('dragover', (e) => {
        e.preventDefault();
        uploadZone.classList.add('dragover');
      });
      
      uploadZone.addEventListener('dragleave', () => {
        uploadZone.classList.remove('dragover');
      });
      
      uploadZone.addEventListener('drop', (e) => {
        e.preventDefault();
        uploadZone.classList.remove('dragover');
        if (e.dataTransfer.files.length) {
          fileInput.files = e.dataTransfer.files;
          handleFileSelect();
        }
      });

      fileInput.addEventListener('change', handleFileSelect);

      function handleFileSelect() {
        if (fileInput.files.length > 0) {
          rawFile = fileInput.files[0];
          
          if (!rawFile.name.endsWith('.csv')) {
            alert('Please select a valid CSV file.');
            resetUI();
            return;
          }

          fileNameDisplay.textContent = rawFile.name;
          uploadZone.style.display = 'none';
          processActions.style.display = 'flex';
          previewPanel.style.display = 'none';
        }
      }

      resetBtn.addEventListener('click', resetUI);

      function resetUI() {
        fileInput.value = '';
        rawFile = null;
        sanitizedDataArray = [];
        uploadZone.style.display = 'block';
        processActions.style.display = 'none';
        previewPanel.style.display = 'none';
      }

      // Sanitize action
      sanitizeBtn.addEventListener('click', () => {
        if (!rawFile) return;

        const reader = new FileReader();
        reader.onload = function(e) {
          const text = e.target.result;
          processCSV(text);
        };
        reader.readAsText(rawFile);
      });

      function processCSV(csvText) {
        // Basic CSV Parsing (splits by new line, then by comma)
        const lines = csvText.split(/\r?\n/);
        sanitizedDataArray = [];

        lines.forEach(line => {
          // 1. Remove completely empty rows
          if (line.trim().length === 0) return; 

          // 2. Split into columns, trim whitespace from every cell
          const columns = line.split(',').map(col => col.trim());
          
          // Only push if the row actually has data
          if (columns.some(col => col.length > 0)) {
            sanitizedDataArray.push(columns);
          }
        });

        renderPreviewTable();
      }

      function renderPreviewTable() {
        if (sanitizedDataArray.length === 0) {
          alert("The CSV file was empty or contained no valid data.");
          return;
        }

        previewThead.innerHTML = '';
        previewTbody.innerHTML = '';

        // Extract Headers (Row 0)
        const headers = sanitizedDataArray[0];
        const headerRow = document.createElement('tr');
        headers.forEach(headerText => {
          const th = document.createElement('th');
          th.textContent = headerText;
          headerRow.appendChild(th);
        });
        previewThead.appendChild(headerRow);

        // Extract Body (Rows 1 to end)
        // For the preview, let's limit it to 50 rows to keep the DOM light, 
        // but the download will include everything.
        const previewLimit = Math.min(sanitizedDataArray.length, 51); 

        for (let i = 1; i < previewLimit; i++) {
          const rowData = sanitizedDataArray[i];
          const tr = document.createElement('tr');
          
          rowData.forEach(cellText => {
            const td = document.createElement('td');
            td.textContent = cellText;
            tr.appendChild(td);
          });
          
          previewTbody.appendChild(tr);
        }

        previewSubtitle.textContent = `Showing ${previewLimit - 1} of ${sanitizedDataArray.length - 1} total valid rows.`;
        previewPanel.style.display = 'flex';
      }

      // Download Action
      downloadBtn.addEventListener('click', () => {
        if (sanitizedDataArray.length === 0) return;

        // Convert array back to CSV string
        const csvContent = sanitizedDataArray.map(row => {
          // Wrap cells in quotes if they contain commas to avoid breaking the CSV format
          return row.map(cell => cell.includes(',') ? `"${cell}"` : cell).join(',');
        }).join('\n');

        // Create a Blob and trigger download
        const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
        const url = URL.createObjectURL(blob);
        const link = document.createElement('a');
        
        link.setAttribute('href', url);
        link.setAttribute('download', `sanitized_${rawFile.name}`);
        link.style.visibility = 'hidden';
        
        document.body.appendChild(link);
        link.click();
        document.body.removeChild(link);
      });
    </script>
  </body>
</html>