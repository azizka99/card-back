      }

      .search-bar i {
        color: var(--text-gray);
        margin-right: 10px;
      }

      .search-bar input {
        border: none;
        background: none;
        outline: none;
        width: 100%;
        font-size: 14px;
        color: var(--text-dark);
      }

      .header-actions {
        display: flex;
        align-items: center;
        gap: 20px;
      }

      .icon-wrapper {
        position: relative;
        cursor: pointer;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        transition: 0.2s;
      }

      .icon-wrapper:hover {
        background-color: var(--bg-body);
        color: var(--primary);
      }

      .badge {
        position: absolute;
        top: 8px;
        right: 8px;
        width: 8px;
