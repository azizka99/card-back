<aside
  style="
    width: 260px;
    background: #6262a6;
    color: #ffffff;
    display: flex;
    flex-direction: column;
    position: fixed;
    height: 100vh;
    left: 0;
    top: 0;
    padding: 24px;
    z-index: 50;
    box-sizing: border-box;
  "
>
  <!-- Logo -->
  <div
    style="
      font-size: 22px;
      font-weight: 700;
      display: flex;
      align-items: center;
      gap: 12px;
      margin-bottom: 40px;
      letter-spacing: -0.5px;
      line-height: 1;
    "
  >
    <i class="fas fa-layer-group"></i>
    <span>Arasscan</span>
  </div>

  <!-- Section Label -->
  <div
    style="
      font-size: 12px;
      text-transform: uppercase;
      color: rgba(255, 255, 255, 0.6);
      margin-bottom: 10px;
      font-weight: 600;
      letter-spacing: 0.5px;
    "
  >
    Analytics
  </div>

  <!-- Menu -->
  <ul
    style="
      list-style: none;
      display: flex;
      flex-direction: column;
      gap: 8px;
      margin: 0;
      padding: 0;
    "
  >
    <% function linkStyle(isActive){ %> <%= [ "text-decoration:none", "color:" +
    (isActive ? "#ffffff" : "rgba(255,255,255,0.8)"), "padding:12px 16px",
    "border-radius:8px", "display:flex", "align-items:center", "gap:12px",
    "font-size:14px", "font-weight:500", "transition:all 0.2s", "background:" +
    (isActive ? "rgba(255,255,255,0.15)" : "transparent") ].join(";") %> <% } %>
    <% function iconStyle(){ %> width:20px; text-align:center; <% } %>

    <li>
      <a
        href="/a26ae3e19a140048efd2/dashboard"
        style="<% linkStyle(activePage === 'dashboard'); %>"
        onmouseover="this.style.background='rgba(255,255,255,0.15)'; this.style.color='#fff';"
        onmouseout="this.style.background='<%= (activePage === 'dashboard') ? 'rgba(255,255,255,0.15)' : 'transparent' %>'; this.style.color='<%= (activePage === 'dashboard') ? '#fff' : 'rgba(255,255,255,0.8)' %>';"
      >
        <i class="fas fa-chart-pie" style="<% iconStyle(); %>"></i>
        Dashboard
      </a>
    </li>

    <li>
      <a
        href="/a26ae3e19a140048efd2/live-feed"
        style="<% linkStyle(activePage === 'live-feed'); %>"
        onmouseover="this.style.background='rgba(255,255,255,0.15)'; this.style.color='#fff';"
        onmouseout="this.style.background='<%= (activePage === 'live-feed') ? 'rgba(255,255,255,0.15)' : 'transparent' %>'; this.style.color='<%= (activePage === 'live-feed') ? '#fff' : 'rgba(255,255,255,0.8)' %>';"
      >
        <i class="fas fa-qrcode" style="<% iconStyle(); %>"></i>
        Live Feed
      </a>
    </li>

    <li>
      <a
        href="/a26ae3e19a140048efd2/download"
        style="<% linkStyle(activePage === 'download'); %>"
        onmouseover="this.style.background='rgba(255,255,255,0.15)'; this.style.color='#fff';"
        onmouseout="this.style.background='<%= (activePage === 'download') ? 'rgba(255,255,255,0.15)' : 'transparent' %>'; this.style.color='<%= (activePage === 'download') ? '#fff' : 'rgba(255,255,255,0.8)' %>';"
      >
        <i class="fas fa-arrow-down" style="<% iconStyle(); %>"></i>
        Download
      </a>
    </li>

    <li>
      <a
        href="/a26ae3e19a140048efd2/monthly-payout"
        style="<% linkStyle(activePage === 'monthlyPayload'); %>"
        onmouseover="this.style.background='rgba(255,255,255,0.15)'; this.style.color='#fff';"
        onmouseout="this.style.background='<%= (activePage === 'monthlyPayload') ? 'rgba(255,255,255,0.15)' : 'transparent' %>'; this.style.color='<%= (activePage === 'monthlyPayload') ? '#fff' : 'rgba(255,255,255,0.8)' %>';"
      >
        <i class="fas fa-calendar-alt" style="<% iconStyle(); %>"></i>
        Monthly Payload
      </a>
    </li>
  </ul>

  <!-- Section Label -->
  <div
    style="
      font-size: 12px;
      text-transform: uppercase;
      color: rgba(255, 255, 255, 0.6);
      margin: 24px 0 10px;
      font-weight: 600;
      letter-spacing: 0.5px;
    "
  >
    Admin
  </div>

  <ul
    style="
      list-style: none;
      display: flex;
      flex-direction: column;
      gap: 8px;
      margin: 0;
