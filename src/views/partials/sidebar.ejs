    <li>
      <a
        href="/a26ae3e19a140048efd2/magic-links"
        style="<% linkStyle(activePage === 'magicLinks'); %>"
        onmouseover="this.style.background='rgba(255,255,255,0.15)'; this.style.color='#fff';"
        onmouseout="this.style.background='<%= (activePage === 'magicLinks') ? 'rgba(255,255,255,0.15)' : 'transparent' %>'; this.style.color='<%= (activePage === 'monthlyPayload') ? '#fff' : 'rgba(255,255,255,0.8)' %>';"
      >
        <i class="fas fa-wand-magic" style="<% iconStyle(); %>"></i>
        Magic Links
      </a>
    </li>
    <li>
      <a
        href="/a26ae3e19a140048efd2/management"
        style="<% linkStyle(activePage === 'permissions'); %>"
        onmouseover="this.style.background='rgba(255,255,255,0.15)'; this.style.color='#fff';"
        onmouseout="this.style.background='<%= (activePage === 'management') ? 'rgba(255,255,255,0.15)' : 'transparent' %>'; this.style.color='<%= (activePage === 'management') ? '#fff' : 'rgba(255,255,255,0.8)' %>';"
      >
        <i class="fas fa-shield-alt" style="<% iconStyle(); %>"></i>
