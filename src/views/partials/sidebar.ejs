        onmouseout="this.style.background='<%= (activePage === 'users') ? 'rgba(255,255,255,0.15)' : 'transparent' %>'; this.style.color='<%= (activePage === 'users') ? '#fff' : 'rgba(255,255,255,0.8)' %>';"
      >
