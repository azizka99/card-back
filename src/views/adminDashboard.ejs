    <script>
      const ctx = document.getElementById("scanChart").getContext("2d");

      // Gradient fill for the chart
      let gradient = ctx.createLinearGradient(0, 0, 0, 400);
      gradient.addColorStop(0, "rgba(98, 98, 166, 0.3)"); // Primary color fade
      gradient.addColorStop(1, "rgba(98, 98, 166, 0.0)");

      const myChart = new Chart(ctx, {
        type: "line",
        data: {
          labels: ["Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun"],
          datasets: [
            {
              label: "Cards Scanned",
              data: [1200, 1900, 1500, 2200, 1800, 900, 1100],
              backgroundColor: gradient,
              borderColor: "#6262A6", // Primary Color
              borderWidth: 2,
              pointBackgroundColor: "#ffffff",
              pointBorderColor: "#6262A6",
              pointRadius: 5,
              pointHoverRadius: 7,
              fill: true,
              tension: 0.4, // Smooth curves
            },
          ],
        },
        options: {
          responsive: true,
          maintainAspectRatio: false, // CRITICAL: This allows the chart to fit the container height
          plugins: {
            legend: {
              display: false,
            },
            tooltip: {
              backgroundColor: "#1e293b",
              padding: 12,
              cornerRadius: 8,
            },
          },
          scales: {
            x: {
              grid: {
                display: false,
                drawBorder: false,
              },
              ticks: {
                color: "#64748b",
              },
            },
            y: {
              beginAtZero: true,
              grid: {
                borderDash: [5, 5],
                color: "#e2e8f0",
              },
              ticks: {
                color: "#64748b",
              },
            },
          },
        },
      });

      // --- NOTIFICATION DROPDOWN LOGIC ---
      const notifBtn = document.getElementById("notificationBtn");
      const notifDropdown = document.getElementById("notificationDropdown");

      // Toggle dropdown on click
      notifBtn.addEventListener("click", function (e) {
        // Prevent the click from triggering the document listener immediately
        e.stopPropagation();
        notifDropdown.classList.toggle("active");
      });

      // Close dropdown when clicking anywhere else on the page
