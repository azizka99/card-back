            <% // ---------- helpers (ES5 compatible) ---------- function
            startOfDay(d) { return new Date(d.getFullYear(), d.getMonth(),
            d.getDate()); } function sameDay(a, b) { return
            startOfDay(a).getTime() === startOfDay(b).getTime(); } function
            parseTagDate(tagName) { if (!tagName) return null; var s =
            String(tagName); var m, parts, y, mo, da, dt, raw, yy; // 1)
            YYYY-MM-DD or YYYY.MM.DD or YYYY/MM/DD m =
            s.match(/(\d{4}[.\-/]\d{2}[.\-/]\d{2})/); if (m) { parts =
            m[1].replace(/[.\/]/g, "-").split("-"); y = Number(parts[0]); mo =
            Number(parts[1]); da = Number(parts[2]); dt = new Date(y, mo - 1,
            da); if (dt && dt.getFullYear() === y && dt.getMonth() === mo - 1 &&
            dt.getDate() === da) return dt; } // 2) DD-MM-YYYY or DD.MM.YYYY or
            DD/MM/YYYY m = s.match(/(\d{2}[.\-/]\d{2}[.\-/]\d{4})/); if (m) {
            parts = m[1].replace(/[.\/]/g, "-").split("-"); da =
            Number(parts[0]); mo = Number(parts[1]); y = Number(parts[2]); dt =
            new Date(y, mo - 1, da); if (dt && dt.getFullYear() === y &&
            dt.getMonth() === mo - 1 && dt.getDate() === da) return dt; } // 3)
            DD-MM-YY or DD.MM.YY or DD/MM/YY (assume 20xx) m =
            s.match(/(\d{2}[.\-/]\d{2}[.\-/]\d{2})/); if (m) { parts =
            m[1].replace(/[.\/]/g, "-").split("-"); da = Number(parts[0]); mo =
            Number(parts[1]); yy = Number(parts[2]); y = 2000 + yy; dt = new
            Date(y, mo - 1, da); if (dt && dt.getFullYear() === y &&
            dt.getMonth() === mo - 1 && dt.getDate() === da) return dt; } // 4)
            YYYYMMDD m = s.match(/(\d{8})/); if (m) { raw = m[1]; y =
            Number(raw.slice(0, 4)); mo = Number(raw.slice(4, 6)); da =
            Number(raw.slice(6, 8)); dt = new Date(y, mo - 1, da); if (dt &&
            dt.getFullYear() === y && dt.getMonth() === mo - 1 && dt.getDate()
            === da) return dt; } return null; } // ---------- compute todays
            notifications once ---------- var today = new Date(); var allTags =
            (typeof tags !== "undefined" && tags) ? tags : []; var todays = [];
            var i, t, dtt; for (i = 0; i < allTags.length; i++) { t =
            allTags[i]; dtt = parseTagDate(t && t.name); if (dtt && sameDay(dtt,
            today)) todays.push(t); } // limit to 10 var show = todays.slice(0,
            10); var showCount = show.length; %> <% if (showCount > 0) { %>
